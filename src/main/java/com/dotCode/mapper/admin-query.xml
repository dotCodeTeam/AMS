<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment/>
    <entry key="getAllAtdInfo">
        SELECT *
        FROM ATTENDANCE A
    </entry>
    <entry key="getAtdInfo">
        SELECT
                A.*
        FROM    ATTENDANCE A
        WHERE   A.EMP_NO = ?
    </entry>
    <entry key="updateAtdTotalDayCount">
        UPDATE
            ATTENDANCE A
        SET
            A.TOTAL_DAY_COUNT = ?
        WHERE
            A.EMP_NO = ?
    </entry>
    <entry key="updateAtdOntimeCount">
        UPDATE
            ATTENDANCE A
        SET
            A.ONTIME_COUNT = ?
        WHERE
            A.EMP_NO = ?
    </entry>
    <entry key="updateAtdLateCount">
        UPDATE
            ATTENDANCE A
        SET
            A.LATE_COUNT = ?
        WHERE
            A.EMP_NO = ?
    </entry>
    <entry key="updateAtdAbsentCount">
        UPDATE
            ATTENDANCE A
        SET
            A.ABSENT_COUNT = ?
        WHERE
            A.EMP_NO = ?
    </entry>
    <entry key="updateAtdTotalScore">
        UPDATE
            ATTENDANCE A
        SET
            A.TOTAL_SCORE = ?
        WHERE
            A.EMP_NO = ?
    </entry>
</properties>